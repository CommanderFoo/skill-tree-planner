{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "schema_project.json",
	"title": "Skill Tree Project",
	"description": "Root schema for a complete skill tree project containing one or more trees",
	"type": "object",
	"required": [
		"version",
		"metadata",
		"settings",
		"trees"
	],
	"properties": {
		"version": {
			"type": "string",
			"description": "Schema version for migration compatibility",
			"pattern": "^\\d+\\.\\d+\\.\\d+$",
			"default": "1.0.0"
		},
		"metadata": {
			"type": "object",
			"description": "Project-level metadata",
			"required": [
				"name"
			],
			"properties": {
				"name": {
					"type": "string",
					"description": "Name of this skill tree project",
					"minLength": 1,
					"maxLength": 200
				},
				"description": {
					"type": "string",
					"description": "Description of the project",
					"default": ""
				},
				"author": {
					"type": "string",
					"description": "Creator of this project",
					"default": ""
				},
				"created_at": {
					"type": "string",
					"description": "ISO 8601 timestamp of project creation",
					"format": "date-time"
				},
				"modified_at": {
					"type": "string",
					"description": "ISO 8601 timestamp of last modification",
					"format": "date-time"
				}
			},
			"additionalProperties": false
		},
		"settings": {
			"type": "object",
			"description": "Global project settings",
			"properties": {
				"global_point_pool": {
					"type": "object",
					"description": "Shared point pool across all trees (if enabled)",
					"properties": {
						"enabled": {
							"type": "boolean",
							"description": "Whether trees share a global point pool",
							"default": false
						},
						"total": {
							"type": "integer",
							"description": "Total points in the global pool",
							"minimum": 0,
							"default": 0
						},
						"spent": {
							"type": "integer",
							"description": "Points spent from the global pool",
							"minimum": 0,
							"default": 0
						}
					},
					"additionalProperties": false
				},
				"allow_refunds": {
					"type": "boolean",
					"description": "Whether points can be refunded from nodes",
					"default": true
				},
				"cascade_refunds": {
					"type": "boolean",
					"description": "Whether refunding a node automatically refunds dependent nodes",
					"default": false
				}
			},
			"additionalProperties": false
		},
		"trees": {
			"type": "array",
			"description": "All skill trees in this project",
			"items": {
				"$ref": "schema_tree.json"
			},
			"default": []
		}
	},
	"additionalProperties": false
}